<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <div>
          <%= image_tag "logos/Mobilize_Logo_Comms_Special Aqua.png", size: "200x200", alt: "MUS Logo Blue" %>
        </div>
        <h3>Change Your Password</h3>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <% flash.each do |key, value| %>
              <div class="alert alert-danger">
                    <%= value %>
              </div>
            <% end %>
            
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "New Password", required: true %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm New Password", required: true %>
            </div>


            <%= f.submit "Change my password".titleize, class: "btn btn-primary block full-width m-b" %>
           
            <small><%= link_to "Forgot password?", new_password_path(resource_name) %></small><br />

            <a class="btn btn-sm btn-white btn-block" href="<%= url_for :controller => 'users/sessions', :action => 'new' %>">Login</a>

            <a class="btn btn-sm btn-white btn-block" href="<%= url_for :controller => 'users/registrations', :action => 'new' %>">Create an account</a>
        <% end %>
        <p class="m-t"> <small>Mobilize Comms & Blueprint 108 &copy; 2019-2020</small> </p>
    </div>
</div>